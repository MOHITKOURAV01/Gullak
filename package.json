{
    "name": "gullak-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd client && npm run dev",
        "dev:backend": "nodemon --ignore server/db.json server/server.js",
        "build": "cd client && npm install && npm run build && cd .. && mkdir -p dist && cp -r client/dist/* dist/",
        "start": "node server/server.js"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.0.0",
        "nodemailer": "^7.0.13",
        "qrcode": "^1.5.4",
        "resend": "^6.9.1",
        "speakeasy": "^2.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.1"
    },
    "engines": {
        "node": ">=18"
    }
}